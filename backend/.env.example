# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=cernoid
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/cernoid

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["*"]

# Face Recognition
FACE_RECOGNITION_MODEL=hog  # or cnn for GPU
MIN_FACE_CONFIDENCE=0.6
FACE_ENCODING_BATCH_SIZE=32 