# Core Application Settings
NODE_ENV=production
DEBUG=true
PORT=3000
NEXT_TELEMETRY_DISABLED=1
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/cernoid
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=cernoid

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# API Configuration
API_URL=http://backend:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_APP_NAME=CernoID
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-key-change-in-production

# Security Settings
CORS_ORIGIN=http://localhost:3000

# Face Recognition Configuration
ENABLE_FACE_RECOGNITION=true
NEXT_PUBLIC_ENABLE_FACE_RECOGNITION=true
FACE_RECOGNITION_MODEL_PATH=/app/models/face_recognition
FACE_DETECTION_CONFIDENCE=0.85

# Monitoring and Logging
LOG_LEVEL=INFO
GRAFANA_ADMIN_PASSWORD=admin

# SSL/TLS
SSL_KEY_FILE=./certs/privkey.pem
SSL_CERT_FILE=./certs/fullchain.pem 