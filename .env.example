# Application
NODE_ENV=production
PORT=8000

# Database
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/cernoid"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cernoid
DB_USER=postgres
DB_PASSWORD=your_password

# Security
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
ENCRYPTION_KEY=your-encryption-key

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Server Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_SWAGGER=true

# Cloud Storage
STORAGE_BUCKET=your_bucket_name
STORAGE_REGION=your_region

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# WebSocket Configuration
NEXT_PUBLIC_WS_URL="ws://localhost:3000/ws"
REDIS_PASSWORD=your_redis_password

# Face Recognition Settings
FACE_DETECTION_THRESHOLD=0.6
MIN_FACE_SIZE=20
ENABLE_ANTI_SPOOFING=true

# Security Settings
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30

# Storage Paths
IMAGE_FOLDER=data/images
MODELS_FOLDER=models
TEMP_FOLDER=data/temp

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENABLE_DOCS=true
CORS_ORIGINS=["*"]

# Notification Settings (Optional)
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Twilio Configuration (Optional)
TWILIO_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone

# Development Settings
DEBUG=true

## Troubleshooting

Check the logs at:
- Windows: `logs\startup.log`
- Linux/Mac: `logs/startup.log`

Common issues:
1. Port 3000 in use: The startup script will prompt to kill the existing process
2. Missing dependencies: Run `npm install` manually
3. Build errors: Check the logs and run `npm run build` manually

